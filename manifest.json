{
  "name": "TodoList Application",
  "version": "1.0",
  "description": "A powerful todolist application for chrome",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/todo.png",
      "32": "images/todo.png",
      "48": "images/todo.png",
      "128": "images/todo.png"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "images/todo.png",
    "32": "images/todo.png",
    "48": "images/todo.png",
    "128": "images/todo.png"
  },
  "manifest_version": 2
}
